<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_200sdp"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/not_found_state" />

    <TextView
        android:id="@+id/message_toUser_Failed"
        android:layout_width="238dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        android:text="Text view Text view Text view Text viewText view Text view"
        android:textSize="@dimen/_15sdp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/empty_image"
        app:layout_constraintStart_toStartOf="@+id/empty_image"
        app:layout_constraintTop_toBottomOf="@+id/empty_image" />

    <Button
        android:id="@+id/retryBtnError"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_weight=".2"
        android:text="@string/retry"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/empty_image"
        app:layout_constraintStart_toStartOf="@+id/empty_image"
        app:layout_constraintTop_toBottomOf="@+id/message_toUser_Failed" />

</androidx.constraintlayout.widget.ConstraintLayout>